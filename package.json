{
  "name": "@coast/logger",
  "version": "1.1.0",
  "description": "A Node/browser application logger",
  "main": "./dist/main.js",
  "scripts": {
    "build": "rimraf ./dist && babel src --out-dir ./dist",
    "lint": "eslint ./src",
    "lintfix": "eslint ./src --fix",
    "watch": "watch 'yarn build' src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/coast-app/logger.git"
  },
  "author": "Jeremy Shimko <jeremy@coastapp.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/coast-app/logger/issues"
  },
  "homepage": "https://github.com/coast-app/logger#readme",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-eslint": "^10.0.2",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "lodash": "^4.17.15",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.18",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "bunyan": "^1.8.12",
    "bunyan-format": "^0.2.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "babel-eslint",
    "rules": {
      "comma-dangle": ["error", "never"],
      "no-underscore-dangle": 0,
      "object-curly-newline": ["error", {
        "ObjectExpression": { "multiline": true },
        "ObjectPattern": { "multiline": true }
      }]
    }
  }
}
